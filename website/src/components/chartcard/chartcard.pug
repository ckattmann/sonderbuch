div.chartcard
    #charttitle-container
        #chartselection-container

            .charttitlebar
                .bartitle Location:
                select#select-location.select-location 

            #container-values.charttitlebar
                .bartitle Values:
                #values-options.option-container
                    each desc, key in values
                        .chartoption(id=desc.id, data-values=desc.values)= key

            #timeselectbar.charttitlebar
                .bartitle Time Interval:
                #timeInterval-options.option-container
                    each desc, key in timeIntervals
                        .chartoption(id=desc.id, data-timeinterval=desc.values)= key
                    .chartoption#random-timeframe Custom Range

            #container-aggregation.charttitlebar
                .bartitle Aggregation:
                input#input-aggtime(value="10")
                select#select-timeUnit 
                    option(value='s') Seconds
                    option(value='m',selected='selected') Minutes
                    option(value='h') Hours
                    option(value='d') Day
                    option(value='w') Weeks

        #chartlegend.chartlegenddiv
    .containerforspinner
        #basicchart.chartdiv
        .spinner
        .splashmessage